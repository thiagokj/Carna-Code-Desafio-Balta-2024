@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Histórico IMC</h3>

<form class="gap-1 rounded px-5 pt-5 pb-10 flex flex-col items-center justify-center bg-white" method="POST">
    <div class="-mt20">
        <img class="logo" src="assets/img/icon-no-bg.png" />
    </div>
    <div class="flex flex-col gap-1">
        <h1 class="text-center text-4xl text-black">
            Histórico
        </h1>

        <h2 class="text-center text-xl text-gray">
            Pesquisar por registros anteriores
        </h2>
    </div>

    <div class="w-full">
        <input class="w-full search-box-history" placeholder="Pesquisar..." />
    </div>

    <table class="table-history">
        <tr>
            <td>
                <div class="square-history"></div>
            </td>
            <td class="imc-data-history">
                <div class="imc-content-history">
                    <p>
                        <strong>Peso Ideal✅</strong>
                        <span class="imc-date-history">8m atrás</span>
                    </p>
                    <p>
                        Parabéns, você está no seu peso ideal,
                        continue mantendo seu estilo!
                    </p>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="square-history"></div>
            </td>
            <td class="imc-data-history">
                <div class="imc-content-history">
                    <p>
                        <strong>Sobrepeso⛔</strong>
                        <span>12/10/2023</span>
                    </p>
                    <p>
                        Estamos quase lá! Faça alguns ajustes para
                        ficar no peso ideal!
                    </p>
                </div>
            </td>
        </tr>
    </table>
    <div class="w-full flex">
        <button class="w-full cursor-pointer btn btn-primary transition-all duration-500">
            Fazer novo calculo
        </button>
    </div>
    <div class="w-full flex">
        <a class="w-full cursor-pointer text-center btn btn-secondary transition-all duration-500">
            Não tenho um acesso
        </a>
    </div>
</form>

<button @onclick="OpenModal">Abrir Modal</button>

<ModalIMC Title="Título do Modal" Content="Conteúdo do Modal" OnClose="ModalClosed" IsVisible="@IsModalVisible" />

@code {
    private bool IsModalVisible { get; set; }

    private void OpenModal() => IsModalVisible = true;

    private void ModalClosed() => IsModalVisible = false;
}
